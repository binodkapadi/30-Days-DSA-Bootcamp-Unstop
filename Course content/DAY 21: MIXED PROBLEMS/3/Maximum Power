#include <iostream>
#include <vector>
using namespace std;

bool can_partition(vector<int>& arr) {

    int n = arr.size();
    if (n < 2) return false; // need at least 2 groups

    int total = 0;
    for (int x : arr) total += x;

    // if odd, cannot split
    if (total % 2 != 0) return false;

    int target = total / 2;

    vector<bool> dp(target + 1, false);
    dp[0] = true;

    // subset sum DP
    for (int num : arr) {
        for (int s = target; s >= num; --s) {
            dp[s] = dp[s] || dp[s - num];
        }
    }

    return dp[target];
}

int main() {
    int N;
    cin >> N;

    vector<int> arr(N);
    for (int i = 0; i < N; ++i) {
        cin >> arr[i];
    }

    if (can_partition(arr)) {
        int total_sum = 0;
        for (int x : arr) total_sum += x;
        cout << total_sum / 2 << endl;
    } else {
        cout << 0 << endl;
    }

    return 0;
}
