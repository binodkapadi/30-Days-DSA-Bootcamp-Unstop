#include <iostream>
#include <vector>
#define MOD 1000000007

using namespace std;

int seat_allotment(int n) {

    // if odd rows â†’ impossible
    if (n % 2 == 1) return 0;

    vector<long long> dp(n + 1, 0);

    dp[0] = 1;
    if (n >= 2) dp[2] = 3;

    for (int i = 4; i <= n; i += 2) {
        dp[i] = (4LL * dp[i-2] % MOD - dp[i-4] + MOD) % MOD;
    }

    return dp[n];
}

int main() {
    int n;
    cin >> n;

    int result = seat_allotment(n);
    cout << result << endl;

    return 0;
}
