#include <iostream>
#include <string>

int user_logic(const std::string& s) {
    int n = s.length();
    
    // Create lowercase version
    std::string lower = s;
    for (int i = 0; i < n; i++) {
        lower[i] = std::tolower(lower[i]);
    }

    // Check palindrome
    int left = 0, right = n - 1;
    while (left < right) {
        if (lower[left] != lower[right]) {
            return (int)s[0]; // ASCII value of first character
        }
        left++;
        right--;
    }

    // If palindrome
    return n;
}

int main() {
    std::string s;
    std::getline(std::cin, s);

    // Call user logic function and print the output
    int result = user_logic(s);
    std::cout << result << std::endl;

    return 0;
}
