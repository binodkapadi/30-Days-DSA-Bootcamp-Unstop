#include <iostream>
#include <vector>
using namespace std;

void find_center_node(vector<vector<int>>& edges) {
    int n = edges.size() + 1; // N nodes
    vector<int> degree(n + 1, 0); // 1-indexed

    // count degrees
    for (auto &e : edges) {
        int u = e[0], v = e[1];
        degree[u]++;
        degree[v]++;
    }

    // find node with degree = N-1
    for (int i = 1; i <= n; ++i) {
        if (degree[i] == n - 1) {
            cout << i << endl;
            return;
        }
    }
}

int main() {
    int n;
    cin >> n;
    vector<vector<int>> edges(n-1, vector<int>(2));
    for (int i = 0; i < n-1; i++) {
        cin >> edges[i][0] >> edges[i][1];
    }
    find_center_node(edges);
    return 0;
}
