SOLUTION ==>>

#include <iostream>
#include <string>
using namespace std;

int costForPattern(const string& S, char first) {
    int need_l = 0;
    int need_s = 0;

    char expected = first;

    for (char c : S) {
        if (c != expected) {
            if (expected == 'l')
                need_l++;
            else
                need_s++;
        }

        expected = (expected == 'l') ? 's' : 'l';
    }

    int swaps = min(need_l, need_s);
    int remaining = abs(need_l - need_s);

    return swaps + remaining;
}

int minimum_operations(int N, const string& S) {

    int cost1 = costForPattern(S, 'l');
    int cost2 = costForPattern(S, 's');

    return min(cost1, cost2);
}

int main() {
    int N;
    string S;

    cin >> N;
    cin >> S;

    cout << minimum_operations(N, S) << endl;

    return 0;
}
