#include <iostream>
#include <vector>

struct ListNode {
    int val;
    ListNode* next;
    ListNode(int x) : val(x), next(NULL) {}
};

int longest_arithmetic_progression(ListNode* head) {
    if (!head) return 0;
    if (!head->next) return 1;

    int maxLen = 2;
    int currLen = 2;

    int prevDiff = head->next->val - head->val;

    ListNode* prev = head->next;
    ListNode* curr = prev->next;

    while (curr) {
        int diff = curr->val - prev->val;

        if (diff == prevDiff) {
            currLen++;
        } else {
            prevDiff = diff;
            currLen = 2;
        }

        maxLen = std::max(maxLen, currLen);

        prev = curr;
        curr = curr->next;
    }

    return maxLen;
}

int main() {
    int n;
    std::cin >> n;
    if (n == 0) {
        std::cout << 0 << std::endl;
        return 0;
    }
    
    std::vector<int> values(n);
    for (int i = 0; i < n; ++i) {
        std::cin >> values[i];
    }
    
    ListNode* head = new ListNode(values[0]);
    ListNode* current = head;
    for (int i = 1; i < n; ++i) {
        current->next = new ListNode(values[i]);
        current = current->next;
    }
    
    int result = longest_arithmetic_progression(head);
    std::cout << result << std::endl;
    
    // Free memory
    current = head;
    while (current != NULL) {
        ListNode* next = current->next;
        delete current;
        current = next;
    }
    return 0;
}
