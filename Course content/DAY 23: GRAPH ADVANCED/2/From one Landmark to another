#include <iostream>
#include <vector>
#include <queue>
#define MOD 1000000007
using namespace std;

int count_paths(int n, int m, vector<pair<int, int>>& roads) {
    vector<vector<int>> adj(n + 1);
    vector<int> indegree(n + 1, 0);

    // Build graph and indegree array
    for (auto &road : roads) {
        int u = road.first;
        int v = road.second;
        adj[u].push_back(v);
        indegree[v]++;
    }

    // Topological sort (Kahn's algorithm)
    queue<int> q;
    for (int i = 1; i <= n; i++) {
        if (indegree[i] == 0) q.push(i);
    }

    vector<int> topo;
    while (!q.empty()) {
        int u = q.front(); q.pop();
        topo.push_back(u);
        for (int v : adj[u]) {
            indegree[v]--;
            if (indegree[v] == 0) q.push(v);
        }
    }

    // DP to count paths
    vector<long long> dp(n + 1, 0);
    dp[1] = 1; // start from node 1

    for (int u : topo) {
        for (int v : adj[u]) {
            dp[v] = (dp[v] + dp[u]) % MOD;
        }
    }

    return dp[n];
}

int main() {
    int n, m;
    cin >> n >> m;
    vector<pair<int, int>> roads(m);
    for (int i = 0; i < m; i++) {
        cin >> roads[i].first >> roads[i].second;
    }

    int result = count_paths(n, m, roads);
    cout << result << endl;
    return 0;
}
