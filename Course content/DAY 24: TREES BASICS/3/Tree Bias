#include <iostream>
#include <vector>

using namespace std;

// DFS to calculate sum of depths
void dfs(int node, int parent, int depth, const vector<vector<int>>& adj, long long &sumDepth) {
    sumDepth += depth;
    for (int neighbor : adj[node]) {
        if (neighbor != parent) {
            dfs(neighbor, node, depth + 1, adj, sumDepth);
        }
    }
}

long long sum_of_depths(int n, const vector<pair<int, int>>& edges) {
    vector<vector<int>> adj(n + 1); // 1-based indexing
    for (auto &e : edges) {
        adj[e.first].push_back(e.second);
        adj[e.second].push_back(e.first);
    }

    long long totalDepth = 0;
    dfs(1, 0, 0, adj, totalDepth); // root is node 1
    return totalDepth;
}

int main() {
    int n;
    cin >> n;
    vector<pair<int, int>> edges(n-1);
    for (int i = 0; i < n-1; ++i) {
        cin >> edges[i].first >> edges[i].second;
    }
    long long result = sum_of_depths(n, edges);
    cout << result << endl;
    return 0;
}
