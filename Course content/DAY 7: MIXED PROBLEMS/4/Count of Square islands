#include <iostream>
#include <vector>
using namespace std;

int count_square_sub_islands(const vector<vector<int>>& matrix) {
    int n = matrix.size();
    int m = matrix[0].size();
    int count = 0;

    vector<vector<int>> dp(n, vector<int>(m, 0));

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            if (matrix[i][j] == 1) {
                if (i == 0 || j == 0) {
                    dp[i][j] = 1;
                } else {
                    dp[i][j] = 1 + min(
                        min(dp[i-1][j], dp[i][j-1]),
                        dp[i-1][j-1]
                    );
                }
                count += dp[i][j];
            }
        }
    }

    return count;
}

int main() {
    int n, m;
    cin >> n >> m;

    vector<vector<int>> matrix(n, vector<int>(m));
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < m; ++j) {
            cin >> matrix[i][j];
        }
    }

    int result = count_square_sub_islands(matrix);
    cout << result << endl;

    return 0;
}
