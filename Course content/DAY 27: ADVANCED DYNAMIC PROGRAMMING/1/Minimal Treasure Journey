#include <bits/stdc++.h>
using namespace std;

int min_treasure(vector<vector<int>>& grid) {
    int n = grid.size();
    vector<int> prev = grid[0]; // DP for row 0

    for (int i = 1; i < n; ++i) {
        // Find smallest and second smallest in previous row
        int min1 = INT_MAX, min2 = INT_MAX, idx1 = -1;
        for (int j = 0; j < n; ++j) {
            if (prev[j] < min1) {
                min2 = min1;
                min1 = prev[j];
                idx1 = j;
            } else if (prev[j] < min2) {
                min2 = prev[j];
            }
        }

        vector<int> curr(n);
        for (int j = 0; j < n; ++j) {
            if (j == idx1) {
                curr[j] = grid[i][j] + min2; // use second smallest
            } else {
                curr[j] = grid[i][j] + min1; // use smallest
            }
        }
        prev = curr; // update DP
    }

    return *min_element(prev.begin(), prev.end());
}

int main() {
    int n;
    cin >> n;
    vector<vector<int>> grid(n, vector<int>(n));
    for (int i = 0; i < n; ++i)
        for (int j = 0; j < n; ++j)
            cin >> grid[i][j];

    cout << min_treasure(grid) << endl;
    return 0;
}
