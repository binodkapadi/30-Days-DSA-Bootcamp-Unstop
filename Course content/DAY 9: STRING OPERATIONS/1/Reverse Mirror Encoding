#include <iostream>
#include <string>

void decode_message(const std::string& encoded) {
      std::string decoded;
    
    for (int i = 0; i < encoded.length(); i++) {
        // Case 2: character followed by '#'
        if (i + 1 < encoded.length() && encoded[i + 1] == '#') {
            char ch = encoded[i];  // encoded letter (o to z)
            // reverse in second half (o-z)
            char original = 'z' - (ch - 'o');
            decoded += original;
            i++; // skip '#'
        }
        // Case 1: single character (a to n)
        else {
            char ch = encoded[i];
            // reverse in first half (a-n)
            char original = 'n' - (ch - 'a');
            decoded += original;
        }
    }

    std::cout << decoded;
}

int main() {
    std::string encoded;
    std::getline(std::cin, encoded);
    
    // Call user logic function and print the output
    decode_message(encoded);
    return 0;
}
