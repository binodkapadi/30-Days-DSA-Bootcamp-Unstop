#include <iostream>
#include <string>
#include <vector>
#include <climits>

int shortest_substring(const std::string& s, const std::string& t) {
      if (t.size() > s.size()) return -1;

    // Frequency array for ASCII characters
    std::vector<int> freq(256, 0);
    
    for (char c : t) {
        freq[c]++;
    }

    int required = t.size();
    int left = 0;
    int minLen = INT_MAX;

    for (int right = 0; right < s.size(); right++) {
        if (freq[s[right]] > 0)
            required--;
        freq[s[right]]--;

        // When all characters are matched
        while (required == 0) {
            minLen = std::min(minLen, right - left + 1);

            freq[s[left]]++;
            if (freq[s[left]] > 0)
                required++;

            left++;
        }
    }

    return minLen == INT_MAX ? -1 : minLen;
}

int main() {
    std::string s, t;
    std::cin >> s >> t;
    int result = shortest_substring(s, t);
    std::cout << result << std::endl;
    return 0;
}
