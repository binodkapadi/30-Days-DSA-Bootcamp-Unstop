#include <iostream>
#include <string>
#include <vector>
#include <algorithm>

void user_logic(const std::string& s) {
    std::vector<int> freq(26, 0);

    // Count frequencies
    for (char c : s) {
        freq[c - 'a']++;
    }

    // Store characters with odd frequencies
    std::vector<std::pair<char, int>> odd;
    for (int i = 0; i < 26; i++) {
        if (freq[i] % 2 == 1) {
            odd.push_back({char('a' + i), freq[i]});
        }
    }

    // No odd frequencies
    if (odd.empty()) {
        std::cout << -1;
        return;
    }

    // Sort by descending frequency, then alphabetically
    std::sort(odd.begin(), odd.end(), [](auto &a, auto &b) {
        if (a.second != b.second)
            return a.second > b.second;
        return a.first < b.first;
    });

    // Case: fewer than 3 odd frequencies
    if (odd.size() < 3) {
        // Find smallest odd frequency (lexicographically smallest if tie)
        auto smallest = *std::min_element(odd.begin(), odd.end(),
            [](auto &a, auto &b) {
                if (a.second != b.second)
                    return a.second < b.second;
                return a.first < b.first;
            });

        std::cout << smallest.first << " " << smallest.second;
        return;
    }

    // Case: exactly or more than 3 odd frequencies
    long long product = 1;
    for (int i = 0; i < 3; i++) {
        std::cout << odd[i].first << " " << odd[i].second << std::endl;
        product *= odd[i].second;
    }
    std::cout << product;
}

int main() {
    std::string s;
    std::getline(std::cin, s);
    
    user_logic(s);
    
    return 0;
}
