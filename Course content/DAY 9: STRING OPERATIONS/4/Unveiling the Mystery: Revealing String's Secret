#include <iostream>
#include <string>
using namespace std;

bool isSubsequence(const string& s, const string& t) {
    int j = 0;
    for (char c : s) {
        if (j < t.size() && c == t[j])
            j++;
    }
    return j == t.size();
}

int find_smallest_day(string S, string T) {
    string curr = S;

    for (int day = 1; day <= 2 * T.size(); day++) {
        if (isSubsequence(curr, T))
            return day;

        string rev = string(curr.rbegin(), curr.rend());
        curr = rev + S;
    }
    return -1;
}

int main() {
    string S, T;
    cin >> S >> T;
    int result = find_smallest_day(S, T);
    cout << result << endl;
    return 0;
}
