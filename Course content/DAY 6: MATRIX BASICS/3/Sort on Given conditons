#include <iostream>
#include <vector>
#include <unordered_map>
#include <algorithm>

void diagonal_sort(std::vector<std::vector<int>>& mat) {
     int m = mat.size();
    int n = mat[0].size();

    // Map to store diagonals
    std::unordered_map<int, std::vector<int>> diag;

    // Step 1: Collect elements of each diagonal
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            diag[i - j].push_back(mat[i][j]);
        }
    }

    // Step 2: Sort each diagonal
    for (auto &d : diag) {
        std::sort(d.second.begin(), d.second.end());
    }

    // Step 3: Place sorted values back into matrix
    for (int i = m - 1; i >= 0; i--) {
        for (int j = n - 1; j >= 0; j--) {
            mat[i][j] = diag[i - j].back();
            diag[i - j].pop_back();
        }
    }
}

int main() {
    int m, n;
    std::cin >> m >> n;
    std::vector<std::vector<int>> mat(m, std::vector<int>(n));
    for (int i = 0; i < m; ++i) {
        for (int j = 0; j < n; ++j) {
            std::cin >> mat[i][j];
        }
    }

    // Call user logic function
    diagonal_sort(mat);

    // Print the sorted matrix
    for (const auto& row : mat) {
        for (const auto& element : row) {
            std::cout << element << " ";
        }
        std::cout << std::endl;
    }

    return 0;
}
