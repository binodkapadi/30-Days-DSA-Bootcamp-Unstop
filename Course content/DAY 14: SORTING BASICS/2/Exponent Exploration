#include <iostream>
#include <vector>
#include <cmath>
#include <algorithm>
using namespace std;

// Check if x^y == n safely (no overflow)
bool power_equals(long long x, int y, int n) {
    long long result = 1;
    for (int i = 0; i < y; ++i) {
        result *= x;
        if (result > n) return false;
    }
    return result == n;
}

vector<pair<int, int>> x_power_y_pairs(int n) {
    vector<pair<int, int>> result;
    result.push_back({n, 1}); // N^1 is always valid

    int maxY = log2(n) + 2; // maximum exponent to check safely

    for (int y = 2; y <= maxY; ++y) {
        int low = 2, high = n;
        while (low <= high) {
            int mid = (low + high) / 2;
            long long pow_val = 1;
            bool overflow = false;
            for (int i = 0; i < y; ++i) {
                pow_val *= mid;
                if (pow_val > n) { overflow = true; break; }
            }

            if (overflow || pow_val > n)
                high = mid - 1;
            else if (pow_val < n)
                low = mid + 1;
            else {
                result.push_back({mid, y});
                break;
            }
        }
    }

    sort(result.begin(), result.end());
    return result;
}

int main() {
    int n;
    cin >> n;

    vector<pair<int, int>> pairs = x_power_y_pairs(n);

    cout << pairs.size() << endl;
    for (auto &p : pairs) {
        cout << p.first << " " << p.second << endl;
    }

    return 0;
}
