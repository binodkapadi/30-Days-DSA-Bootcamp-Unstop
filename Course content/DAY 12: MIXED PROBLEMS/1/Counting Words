#include <iostream>
#include <string>
#include <sstream>
using namespace std;

int countWords(string sentence) {
    stringstream ss(sentence);
    string word;
    int count = 0;

    while (ss >> word)   // counts words separated by spaces
        count++;

    return count;
}

int user_logic(std::string s) {
     int maxLen = 0;
    string current = "";

    for (char c : s) {
        if (c == ',' || c == '.') {
            // process current sentence
            maxLen = max(maxLen, countWords(current));
            current = "";
        } else {
            current += c;
        }
    }

    // last sentence (if not ended with comma/dot)
    if (!current.empty())
        maxLen = max(maxLen, countWords(current));

    return maxLen;
}

int main() {
    std::string s;
    std::getline(std::cin, s);
    
    // Call user logic function and print the output
    int result = user_logic(s);
    std::cout << result << std::endl;
    return 0;
}
