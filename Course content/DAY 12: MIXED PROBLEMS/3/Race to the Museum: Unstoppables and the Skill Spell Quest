#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
using namespace std;

int min_delivery_time(int n, int m, int p, vector<int>& unstoppables, vector<int>& spells) {
    sort(unstoppables.begin(), unstoppables.end());
    sort(spells.begin(), spells.end());

    // check if possible within time T
    auto can = [&](long long T) {
        int j = 0;

        for (int i = 0; i < n; i++) {
            bool assigned = false;

            while (j < m) {
                long long time =
                    llabs((long long)unstoppables[i] - spells[j]) +
                    llabs((long long)spells[j] - p);

                if (time <= T) {
                    assigned = true;
                    j++;          // use this spell
                    break;
                }
                j++;
            }

            if (!assigned) return false;
        }
        return true;
    };

    long long low = 0, high = 2e18, ans = high;

    while (low <= high) {
        long long mid = (low + high) / 2;

        if (can(mid)) {
            ans = mid;
            high = mid - 1;
        } else {
            low = mid + 1;
        }
    }

    return (int)ans;
}

int main() {
    int n, m, p;
    cin >> n >> m >> p;
    
    vector<int> unstoppables(n);
    for(int i = 0; i < n; ++i) {
        cin >> unstoppables[i];
    }

    vector<int> spells(m);
    for(int i = 0; i < m; ++i) {
        cin >> spells[i];
    }
    
    int result = min_delivery_time(n, m, p, unstoppables, spells);
    cout << result << endl;

    return 0;
}
